<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>タスク一覧</h1>
  <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <td>id</td>
          <td>状態</td>
          <td>タスク</td>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.id, task %></td>
            <td><%=task.status %></td>
            <td><%= task.content %></td>
          </tr>      
        <%end %>
      </tbody>
    </table>
  
  <% end %>
    
  <%= paginate @tasks %>
  
  <%= link_to "新規作成ページへ", new_task_path, class: "btn btn-primary" %>
  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Task-List</h1>
      <%= link_to "SignUp",  signup_path,  class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>